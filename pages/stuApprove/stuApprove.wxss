/* pages/stuApprove/stuApprove.wxss */
page{
  background: rgb(243, 241, 241);
}
.blank{
  height: 40rpx;
}
.van-cell-text,radio-group{
  display: inline-block;
}
radio-group{
  margin-left: 110rpx;
}
radio-group>label{
  margin-left: 20rpx;
}
/******获取拍照权限区域 css*********/
.picture{
  position: relative;
  width:100%;
  height:400rpx;
  /* background: red; */
}
.pic-demo{
  position: relative;
  display: inline-block;
  width:50%;
  height:100%;
}
.pic-demo image{
  width:100%;
  height:100%;
}
.takePic{
  position: relative;
  width: 50%;
  height:100%;
  display: inline-block;
  background: rgb(209, 208, 208);
}
.addIcon{
  position: absolute;
  top:50%;
  left: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  background: white;
}
.addTitle{
  position: absolute;
  top:50%;
  left: 50%;
  margin-top: 70rpx;
  margin-left: -60rpx;
  color:white;
  font-size: 30rpx;
}
.line-h,.line-v{
  position: relative;
  top:50%;
  left:50%;
  margin-left: -30rpx;
  margin-top: -1rpx;
  width:60rpx;
  border: 2rpx solid rgb(209, 208, 208);
}
.line-v{
  transform: rotate(90deg)
}
.next{
  margin-top: 50rpx;
  width:100%;
  margin-bottom: 50rpx;
  text-align: center;
}
.next button{
  background: #FFA500;
  color:white;
}
.bindTelephone-icon,.success-icon{
  width:200rpx;
  height:200rpx;
  margin-top: 70rpx;
}
.success-icon{
  margin-bottom: 50rpx;
}
.bindTelephone{
  width:400rpx;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}