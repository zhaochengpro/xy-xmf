.stamp {
  margin:0 auto;
  width: 95%;
  height: 250rpx;
  padding: 0rpx 0rpx;
  position: relative;
  overflow: hidden;
  margin-top: 30rpx;
}
.stamp:before {
  content: '';
  position: absolute;
  top:0;
  bottom:0;
  left:10px;
  right:10px;
  z-index: -1;
  }
.stamp:after {
  content: '';
  position: absolute;
  left: 10px;
  top: 10px;
  box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.5);
  z-index: -2;
}
.stamp>.par{
  position: relative;
  left: 0%;
  top: 0px;
  height: 100%;
  background-color: rgba(255,255,255,0.15);
  padding: 20rpx 40rpx;
  width: 60%;
  border-right:2px dashed rgba(255,255,255,.3);
  display: inline-block;
  box-sizing: border-box;
}
.par-title,.sign,.par-name,.par-max{
  color:#fff;
}
.par-max{
  margin-top: 10rpx;
}
.stamp>.par>text{
  font-size: 35px;
  color:#fff;
  margin-right: 5px;
}
.stamp>.par>.sign{
  font-size: 30px;
  display: inline-block;
  }
.par-name{
  display: inline-block;
  font-size: 30rpx;
}
.stamp>.copy{
  /* background: red; */
  background-color: rgba(255,255,255,0.15);
  display: inline-block;
  padding: 10rpx 14px;
  width:36%;
  height: 100%;
  box-sizing: border-box;
  font-size: 30px;
  position:relative;
  color:rgb(255,255,255);
  vertical-align: top;
}
.stamp>.copy>view{
  font-size: 16px;
  margin-top: 0px;
  }
.stamp01{
  background: #F39B00;
  background: radial-gradient(rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 5px, #F39B00 5px);
  background-size: 15px 15px;
  background-position: 9px 3px;
}
.stamp01:before{
  background-color:#F39B00;
}
