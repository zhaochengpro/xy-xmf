.gender-icon{
  position: absolute;
  width:30rpx;
  height:30rpx;
  margin-top: 5rpx;
  margin-left: 2rpx;
}
.contentArea{
  display: inline-block;
  width:70%;
  height:100%;
  /* background: blue; */
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 7%;
}
.getOrder{
  display: inline-block;
  width:30%;
  height:100%;
  /* background: yellow; */
}
.order-title,.order-desc{
  width:100%;
  height:50%;
  /* background: green; */
}
.order-title{
  font-size: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.order-name,.order-date,.order-place{
  display: inline-block;
  font-size: 20rpx;
  color:darkgray;
}
.order-name{
  position: relative;
  width:25%;
  height:35rpx;
  background:darkgray;
  border-radius: 5rpx;
  color:white;
  text-align: center;
  vertical-align: middle;
  line-height: 35rpx;
}
.order-date{
  margin-left: 15rpx;
  font-size: 18rpx;
}
.order-place{
  font-size: 20rpx;
  margin-left: 20rpx;
}
.getOrder{
  position: relative;
  width:30%;
  height:100%;
}
.order-price{
  display: inline-block;
  width:100%;
  height:40%;
  text-align: center;
  /* background: red; */
}
.order-price>.title{
  display: inline-block;
  font-size: 24rpx;
  color: rgb(117, 117, 117);
  vertical-align: top;
}
.price{
  display: inline-block;
  font-size: 30rpx;
  font-weight: 800;
  color: red;
  vertical-align: top;
}
.btn-order{
  width:80%;
  height:50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color:white;
  background: #FFA500;
  border:none;
}