/* pages/order/order.wxss */
page{
  height:100%;
  background: rgb(243, 241, 241);
}
.tabTop{
  position: fixed;
  z-index: 100;
  left: 0%;
  top:0%;
  width:100%;
  height:80rpx;
  background: white; 
  text-align: center;
  box-shadow: 0rpx 0rpx 10rpx gray;
}
.tabTop-item{
  display: inline-block;
  width:50%;
  height:100%;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
  color:gray;
}
.active{
  color:#FFA500;
  display: inline-block;
  width:50%;
  height:100%;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom:5rpx solid #FFA500;
}
.orderArea-no{
  position: relative;
  top:50%;
  width: 100%;
  height:100%;
  /* background: red; */
  text-align: center;
  color:darkgray;
}
.orderArea{
  width: 100%;
  height:100%;
}
/***订单样式*****/
.orderArea-item{
  width:95%;
  height:400rpx;
  background: white;
  margin:0 auto;
  margin-top: 100rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  overflow: hidden;
  /* border:1rpx solid rgb(243, 241, 241); */
}
.item-top{
  width:100%;
  height:20%;
  /* background: blue; */
  box-sizing: border-box;
  text-align: right;
  padding-right: 30rpx;
  border-bottom: 1rpx solid rgb(243, 241, 241);
}
.item-top image{
  position: relative;
  top:50%;
  margin-top: -25rpx;
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  float: left;
  vertical-align: middle;
  margin-left:20rpx;
}
.item-top text{
  position: relative;
  display: inline-block;
  top:20%;
  text-align: right;
  color: gray;
  font-size: 30rpx;
}
.item-middle{
  width:100%;
  height:60%;
  box-sizing: border-box;
  padding:20rpx 10rpx;
}
.item-bottom{
  width:100%;
  height:20%;
  /* background: red; */
  border-top: 1rpx solid rgb(243, 241, 241);
  box-sizing: border-box;
  text-align: right;
  padding-right: 30rpx;
}
.item-bottom button{
  display: inline-block;
  width:30%;
  height:60%;
  background: white;
  border: 1rpx solid #FFA500;
  font-size: 20rpx;
  line-height: 50rpx;
  /* vertical-align: middle; */
  margin-right: 10rpx;
  margin-top: 20rpx;
}