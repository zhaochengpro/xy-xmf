/* pages/balance/balance.wxss */
page{
  background: rgb(243, 241, 241);
}
.balance{
  position: relative;
  width:100%;
  height:300rpx;
  background: #FFA500;
  text-align: left;
}
.balance-box{
  position: relative;
  margin-left: 30rpx;
}
.balance-title,.balance-number{
  color:white;
  font-family: "黑体"
}
.balance-title{
  font-size: 30rpx;
  padding-top: 40rpx;
}
.balance-number{
  font-size: 90rpx;
  font-weight: 900;
  margin-top: 10rpx;
}
/******/
.withDraw{
  position: relative;
  float: left;
  margin-left: 30rpx;
  margin-top: 10rpx;
  display: block;
  width:100rpx;
  height:50rpx;
  border: 1px solid white;
  background: #FFA500;
  color:white;
  font-size: 20rpx;
  font-family: "黑体";
  text-align: center;
}
/*******/
.aboutBalance{
  position: relative;
  width:90%;
  height:100rpx;
  background: white;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top:30rpx;
  box-sizing: border-box;
}
.income,.expend,.lineH{
  position: relative;
  display: inline-block;
}
.income,.expend{
  width:40%;
  height:100%;
  text-align: center;
  /* background: red; */
  box-sizing: border-box;
  vertical-align: middle;
  padding-top:10rpx; 
}
.title{
  font-family: "黑体";
  font-size: 30rpx;
  color:darkgrey;
}
.number{
  font-family: "黑体";
  /* color:#6521FF; */
}
.lineH{
  width:20%;
  height:80%;
  text-align: center;
  /* background: blue; */
  vertical-align: middle;
  /* border:1px solid black; */
}
.lineH::after{
  content: "";
  display: inline-block;
  height:90%;
  border:0.5rpx solid rgb(230, 228, 228);
  /* vertical-align: middle; */
}
.number:nth-of-type(1){
  color:#FFAB7E;
}
.number:nth-of-type(2){
  color:#65B5FF;
}
/****billDetail css***/
.no-billDetail{
  width:90%;
  /* height:100vh; */
  margin:0 auto;
  padding-top:100rpx;
  /* background: white; */
  border-radius: 20rpx;
  text-align: center;
  color:darkgray;
  font-family: "黑体";
  font-size: 30rpx;
}
.billDetail{
  width:90%;
  /* height:100vh; */
  margin: 0 auto;
  margin-top: 30rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}
.billDetail-item{
  width:100%;
  height:150rpx;
  border-bottom: 1px solid rgb(243, 241, 241);
  margin-bottom: 20rpx;
}
.billDetail-item-header{
  display: inline-block;
  width:15%;
  height:70%;
  border-radius: 50%;
  vertical-align: middle;
  margin-left: 20rpx;
}
.billDetail-item-detail{
  display: inline-block;
  /* background: red; */
  width:45%;
  height:100%;
  vertical-align: middle;
  box-sizing: border-box;
  margin-left: 20rpx;
  line-height: 50rpx
}
.billDetail-item-price{
  display: inline-block;
  width:30%;
  height:100%;
  /* background: blue; */
  vertical-align: middle;
  font-weight: 900;
  text-align: right;
  box-sizing: border-box;
  line-height: 150rpx;
}
.from{
  font-weight: 100;
  font-size: 35rpx;
  font-family: "黑体";
  padding-top:30rpx;
}
.date{
  font-size: 25rpx;
  color:darkgray;
}